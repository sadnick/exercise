<Window x:Class="exercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exercise"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="textbox1" TextWrapping="Wrap" Margin="95,102,59.8,4" TextChanged="textbox1_TextChanged"/>
        <TextBox x:Name="textbox2" TextWrapping="Wrap" Margin="1.4,102,148.6,4" TextChanged="textbox1_TextChanged" Grid.Column="2"/>
        <Label Content="Введите делимое" Margin="95,60,266,43" Grid.ColumnSpan="2"/>
        <Label Content="Введите делитель" Margin="266,63,95,43" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button Content="Сложить" Margin="175.2,45,178.6,50" Grid.Row="1" Grid.Column="1" Click="Button_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Answer" Grid.Column="1" HorizontalAlignment="Center" Margin="0,144,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="207" Grid.RowSpan="2" Height="45" TextChanged="TextBox_TextChanged"/>
        <Button Content="Разделить" Margin="175,45,179.6,50" Grid.Row="1" Click="Button_Click2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
